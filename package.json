{
  "name": "webc",
  "displayName": "WebC",
  "description": "WebC Syntax highlighting & support",
  "homepage": "https://github.com/dwkns/vscode-webc/",
  "repository": {
    "url": "https://github.com/dwkns/vscode-webc/"
  },
  "publisher": "dwkns",
  "license": "MIT",
  "author": {
    "name": "dwkns",
    "email": "dwkns@me.com",
    "url": "https://dwkns.com"
  },
  "version": "0.0.9",
  "engines": {
    "vscode": "^1.73.0"
  },
  "scripts": {
    "pub": "npm version patch && vsce package && vsce publish",
    "clean": "npx rimraf *.vsix yarn-error.log"
  },
  "icon": "images/logo.webp",
  "contributes": {
    "languages": [
      {
        "id": "html",
        "extensions": [
          ".html",
          ".htm",
          ".shtml",
          ".xhtml",
          ".xht",
          ".mdoc",
          ".jsp",
          ".asp",
          ".aspx",
          ".jshtm",
          ".volt",
          ".ejs",
          ".rhtml"
        ],
        "aliases": [
          "HTML",
          "htm",
          "html",
          "xhtml"
        ],
        "mimetypes": [
          "text/html",
          "text/x-jshtm",
          "text/template",
          "text/ng-template",
          "application/xhtml+xml"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "themes": [
      {
        "uiTheme": "vs-dark",
        "label": "webc-dark",
        "path": "./themes/webc-dark.json"
      }
    ],
    "grammars": [
      {
        "path": "./syntaxes/webc.injection.json",
        "scopeName": "source.webc",
        "injectTo": [
          "text.html.derivative",
          "source.js"
        ]
      }
    ],
    "snippets": [
      {
        "language": "html",
        "path": "./snippets/njk-snippets.json"
      }
    ]
  }
}
